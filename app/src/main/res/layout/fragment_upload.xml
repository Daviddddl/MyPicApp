<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clipToPadding="true"
    android:background="#FFFFFF"
    android:fitsSystemWindows="true">

    <include layout="@layout/toolbar_layout" />

    <ImageView
        android:id="@+id/uploadRepairPic"
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="130dp"
        android:src="@mipmap/default_select_photo" />

    <TextView
        android:id="@+id/repair_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:textStyle="bold"
        android:textSize="30sp"
        android:text="@string/upload_title" />

    <Button
        android:id="@+id/uploadBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="70dp"
        android:layout_marginStart="70dp"
        android:background="@drawable/button_login"
        android:elevation="0dp"
        android:padding="12dp"
        android:text="@string/upload"
        android:textColor="#8B008B"
        android:textSize="18sp" />

    <Button
        android:id="@+id/getResBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/uploadBtn"
        android:layout_marginEnd="70dp"
        android:background="@drawable/button_login"
        android:elevation="0dp"
        android:padding="12dp"
        android:text="识别推理"
        android:textColor="#8B008B"
        android:textSize="18sp" />

</RelativeLayout>