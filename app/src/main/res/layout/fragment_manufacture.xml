<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clipToPadding="true"
    android:background="#FFFFFF"
    android:fitsSystemWindows="true">

    <include layout="@layout/toolbar_layout" />

    <ImageView
        android:id="@+id/action_back"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:src="@mipmap/back_true" />

    <ImageView
        android:id="@+id/ivManuPic"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="130dp"
        android:src="@mipmap/default_select_photo" />

    <TextView
        android:id="@+id/repair_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:textStyle="bold"
        android:textSize="30sp"
        android:text="@string/manufacture_title" />

    <Button
        android:id="@+id/getManuResBtn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="350dp"
        android:layout_marginStart="70dp"
        android:background="@drawable/button_login"
        android:elevation="0dp"
        android:padding="12dp"
        android:text="单字识别"
        android:textColor="#8B008B"
        android:textSize="18sp" />

    <Button
        android:id="@+id/getManuResBtn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/getManuResBtn1"
        android:layout_marginEnd="70dp"
        android:background="@drawable/button_login"
        android:elevation="0dp"
        android:padding="12dp"
        android:text="文本识别"
        android:textColor="#8B008B"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/identify_result_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="420dp"
        android:layout_marginStart="30dp"
        android:text="@string/manufacture_result_text" />

    <TextView
        android:id="@+id/manuRes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="100dp"
        android:textColor="@color/red"
        android:text="手写识别结果"
        android:textSize="20sp" />

</RelativeLayout>